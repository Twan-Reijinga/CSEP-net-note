<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CustomMenuItem?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="25.0" prefWidth="55.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.FilesCtrl">
    <children>
        <MenuButton contentDisplay="TEXT_ONLY" graphicTextGap="0.0" layoutX="-1.0" layoutY="-1.0" lineSpacing="1.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="55.0" text="Files" wrapText="true" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <items>
                <CustomMenuItem hideOnClick="false" mnemonicParsing="false" text="Unspecified Action">
                    <content>
                        <TextField fx:id="filePathContainer" onKeyPressed="#checkEnter" pickOnBounds="false" prefHeight="25.0" prefWidth="100.0" promptText="File path">
                            <cursor>
                                <Cursor fx:constant="DEFAULT" />
                            </cursor>
                        </TextField>
                    </content>
                </CustomMenuItem>
                <CustomMenuItem hideOnClick="false" mnemonicParsing="false" text="Unspecified Action">
                    <content>
                        <Button mnemonicParsing="false" onAction="#addFile" prefWidth="100.0" text="Add file" />
                    </content>
                </CustomMenuItem>
                <CustomMenuItem hideOnClick="false" mnemonicParsing="false" text="Unspecified Action">
                    <content>
                        <AnchorPane prefHeight="45.0" prefWidth="100.0">
                            <children>
                                <ScrollPane prefHeight="50.0" prefWidth="100.0" vbarPolicy="NEVER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <content>
                                        <HBox fx:id="fileContainer" minHeight="0.0" minWidth="0.0" prefHeight="45.0" />
                                    </content>
                                </ScrollPane>
                            </children>
                        </AnchorPane>
                    </content>
                </CustomMenuItem>
            </items>
        </MenuButton>
    </children>
</AnchorPane>
